@model IEnumerable<MagicCarRentAPI.Entities.Journal>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Journal" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="text-center">
            <th>Машина</th>
            <th>Клиент</th>
            <th>Начало аренды</th>
            <th>Конец аренды</th>
            <th style="width:30px;">Аренда дней</th>
            <th>Стоимость аренды</th>
            <th>Размер скидки</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item?.Car?.Brand @item?.Car?.Model</td>
                <td>@item?.Client?.Name @item?.Client?.Lastname</td>
                <td>@Html.DisplayFor(modelItem => item.BeginRent)</td>
                <td>@Html.DisplayFor(modelItem => item.EndRent)</td>
                <td>@Math.Floor((item.EndRent.Value - item.BeginRent.Value).TotalDays)</td>
                <td>@Html.DisplayFor(modelItem => item.RentBill)</td>
                <td>@item?.Discount?.DiscountName @item?.Discount?.DiscountRate.ToString("0%")</td>
                <td>
                <td>
                    <a asp-controller="Journal" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Journal" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Journal" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

                </td>
            </tr>
        }
    </tbody>
</table>
